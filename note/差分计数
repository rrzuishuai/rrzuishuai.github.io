#include<iostream>
#include<vector>
#include<map>
#include<algorithm>
#include<unordered_map>
using namespace std;

int main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	int n, x;
	long long ct = 0;
	cin >> n >> x;
	unordered_map<int, int> m;
	vector<int> arr(n);
	for (int i = 0; i < n; i++) {
		int tmp;
		cin >> tmp;
		arr[i] = tmp;
		m[tmp + x]++;
	}
	for (int i = 0; i < n; i++)
		ct += m[arr[i]];
	cout << ct << endl;
	return 0;
}
